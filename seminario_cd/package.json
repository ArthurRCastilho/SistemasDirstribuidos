{
  "name": "sistema-cd",
  "version": "1.0.0",
  "description": "Sistema de Centros de Distribuição",
  "scripts": {
    "hub": "cd hub && npm start",
    "cd": "cd cd && npm start",
    "install:all": "npm install && cd hub && npm install && cd ../cd && npm install",
    "dev": "concurrently \"npm run hub\" \"npm run cd\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mongoose": "^8.15.1"
  }
}
